<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.greener.codegreen.seller">

	<resultMap id="sellerResult" type="com.greener.codegreen.dto.SellerDTO">
		<result property="s_id"		column="s_id"/>
		<result property="s_pwd"		column="s_pwd"/>
		<result property="s_name"		column="s_name"/>
		<result property="s_RRC"		column="s_RRC"/>
		<result property="s_BRN"		column="s_BRN"/>
		<result property="s_email"	column="s_email"/>
		<result property="s_address1"	column="s_address1"/>
		<result property="s_address2"	column="s_address2"/>
		<result property="s_address3"	column="s_address3"/>
		<result property="s_joindate"	column="s_joindate"/>
		<result property="s_phone"	column="s_phone"/>
	</resultMap>
	
	<!-- 소비자 전체 회원의 수 -->
	<select id = "totalCount" parameterType="com.greener.codegreen.dto.SellerDTO" resultType="INT">
		<![CDATA[
			select count(*)
			from Seller
			where s_id is not null
		]]>
	</select>
	<!-- 소비자 전체 리스트 -->
	<select id = "sellerList" parameterType="com.greener.codegreen.dto.SellerDTO" resultType="com.greener.codegreen.dto.SellerDTO">
	 <![CDATA[
	 	select *
	 	from Seller
	 ]]>
	</select>
</mapper>   





